<%= simple_form_for @project do |f| %>

    <%= f.input :name, :label => 'Project Name:' %>
    <%= f.input :project_num, :label => 'Project Number:', :readonly => true %>
    <%= f.input :start_date, :label => 'Start Date:', :as => :string %>
    <%= f.input :project_date, :label => 'Project Date:', :as => :string %>
    <%= f.input :delivery_date, :label => 'Delivery Date:', :as => :string %>
    <%= f.input :estimated_delivery_date, :label => 'Estimated End Date:', :as => :string %>
    <%= f.input :project_task_template_id, :label => 'Project Type:', :collection => return_project_task_templates, :label_method => :name, :value_method => :id, 
                        :include_blank => true  %> 
    <%= f.input :project_desp, :label => 'Project Description:' %>
    <%= f.input :project_instruction, :label => 'Project Instruction', :input_html => { :rows => 4} %>
    <%= f.input :status_id, :label => 'Status:', :collection => return_misc_definitions('project_status'), :label_method => :name, :value_method => :id,
                        :include_blank => true  %>
    <%= f.input :completion_percent, :label => 'Completion %:' %>
    <%= f.input :project_manager_id, :label => 'Project Manager:', :collection => Authentify::UsersHelper.return_users('create', 'projectx_projects') %>
    <%= f.input :expedite, :label => 'Expedite:', :as => :boolean %>
    <%= f.input :customer_name_autocomplete,:input_html => { data: {autocomplete_source: customerx.autocomplete_customers_path}},
                :label => 'Customer:' %>
    <%= f.input :sales_id, :label => 'Sales:', :collection => Authentify::UsersHelper::return_users('create', 'customerx_customers') %>
	<%= f.simple_fields_for :contract do |builder| %>     
    	<%= render('contract', :f => builder)%>
  	<% end %>




    <%= f.button :submit, 'Save', :class =>'btn btn-primary' %>
<% end %>


