<div id="main_body">

<h1>Project Info</h1>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>
<p>
  <b>Number:</b>
  <%= @project.project_num %>
</p>
<p>
  <b>Customer Name:</b>
  <%= @project.customer.name %>
</p>
<p>
  <b>Zone:</b>
  <%= @project.customer.zone.zone_name %>
</p>
<p>
  <b>Type:</b>:</b>
  <%= @project.project_type_id %>
</p>
<p>
  <b>Sales:</b>
  <%= @project.customer.sales.name %>
</p>
<p>
  <b>Last Updated By:</b>
  <%= @project.last_updated_by.name %>
</p>
<p>
  <b>LOGï¼š</b>
  <% @project.logs.order("created_at DESC").each do |t| %>
    <p><%= t.created_at.strftime("%Y/%m/%d") %></p>
    <p><%= t.last_updated_by.name %></p>
    <p><%= t.log %></p>
  <% end %>
</p>

  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0", :id => 'close' %>
  &nbsp;&nbsp;<%= link_to 'New Log', projectx.new_project_log_path(@project, :which_table => 'project', :format => :js), :remote => true, 
                  :id => 'new_log_link' if has_action_right?('create_project', 'projectx_logs') %>
</div>
