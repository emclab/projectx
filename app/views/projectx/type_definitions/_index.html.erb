
  <h1>项目类型一览</h1>
  <table>
    <tr>
      <th>#</th>
      <th>Create Date</th>
      <th>Name</th>
      <th>Brief Note</th>
      <th>Ranking Order</th>
      <th>Active</th>
      <th>Entered By</th>
      <th></th>
    </tr>

    <% @type_definitions.each do |cate| %>
        <tr>
          <td><%= cate.id %></td>
          <td><%= (cate.created_at + 8.hours).strftime("%Y/%m/%d")%></td>
          <td><%= cate.name %></td>
          <td><%= cate.brief_note %></td>
          <td><%= cate.ranking_order %></td>
          <td><%= cate.active ? '是' : '否' %></td>
          <td><%= cate.last_updated_by.name %></td>
          <td><%= link_to 'Edit', edit_type_definition_path(cate, :format => :js), 
                           :remote => true if has_action_right?('update', 'projectx_type_definitions', cate) %></td>
        </tr>
    <% end %>

  </table>

  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0", :id => 'close' %>&nbsp;&nbsp;
  <%= link_to "新项目类型", new_type_definition_path( :format => :js), :remote => true, 
               :id => 'new_log_link' if has_action_right?('create', 'projectx_type_definitions') %>

