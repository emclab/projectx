<%= simple_form_for @task_definition do |f| %>    
	  <%= f.input :name, :label => 'Task Name:' %>  
	  <%= f.input :task_desp, :label => 'Description:' %>
	  <%= f.input :task_instruction, :label => 'Instructions:' %>
	  <%= f.input :ranking_order, :label => 'Ranking Order:' %>
	  <%= f.input :active, :label => 'Active:', :collection => [['是', true], ['否', false]] %>
	  
	  <%= f.button :submit, 'Save' %>  
<% end %>  

