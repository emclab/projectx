<%= simple_form_for @task_definition do |f| %>    
	  <%= f.input :name, :label => t('Task Name'), :readonly => readonly?(@task_definition, 'name') %>  
	  <%= f.input :task_desp, :label => t('Description'), :readonly => readonly?(@task_definition, 'task_desp') %>
	  <%= f.input :task_instruction, :label => t('Instructions'), :readonly => readonly?(@task_definition, 'task_instruction') %>
	  <%= f.input :ranking_order, :label => t('Ranking Order'), :readonly => readonly?(@task_definition, 'ranking_order') %>
	  <% if readonly?(@task_definition, 'active')%>
        <%= f.input :active_noupdate, :label => t('Active'), :readonly => true, :required => false, :input_html => {:value => @task_definition.active} %>
      <% else %>
        <%= f.input :active, :label => t('Active'), :collection => [['是', true], ['否', false]]%>
      <% end %>
	  
	  <%= f.button :submit, t('Save'), :class =>'btn btn-primary' %>  
<% end %>  
