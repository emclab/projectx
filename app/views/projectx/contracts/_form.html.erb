<%= simple_form_for([@project, @contract]) do |f| %>

  <%= f.input :project_name, :label => t('Project Name'), :readonly => true, :input_html => {:value => @project.name} %>
  <%#= f.input :contract_date, :label => t('Contract Date:', :as => :string %>
  <%= f.input :signed, :label => t('Signed') %>
  <%= f.input :sign_date, :label => t('Signed Date'), :as => :string %>
  <%= f.input :signed_by, :label => t('Signed By'), :collection => Authentify::UsersHelper.return_users('create', 'projectx_contracts') %>        
  <%= f.input :contract_amount, :label => t('Contract Amount') %>
  <%= f.input :other_charge, :label => t('Other Charges') %>
  <%= f.input :payment_term, :label => t('Payment Terms (Days)'), :collection => find_config_const('payment_terms', 'projectx').split(",") %>
  <%= f.input :payment_agreement, :label => t('Payment Agreement'), :input_html => { :rows => 4} %>
  <%= f.input :paid_out, :label => t('Paid out?:') %>
  <%= f.input :contract_on_file, :label => t('Contract on file'), :as => :boolean %>

  <%= f.button :submit, t('Save'), :class =>'btn btn-primary' %>
<% end %>  
