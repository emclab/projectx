<div id="main_body">
<h1>Project Task Templates</h1>
<div class="pigination"><%= will_paginate @project_task_templates %></div>
<table>
  <tr>
    <th>#</th>
    <th>CreateDate</th>
    <th>Name</th>
    <th>ProjectType</th>
    <th>Action</th>
    <th>LastUpdatedBy</th>
    <th></th>
    
  </tr>

<% @project_task_templates.each do |r| %>
  <tr>
  	
  	<td><%= link_to r.id.to_s, SUBURI + "/authentify/view_handler?index=1&url=#{projectx.type_definition_project_task_template_path(r.type_definition,r)}" %></td>
  	<td><%= (r.created_at + 8.hours).strftime("%Y/%m/%d") %></td>
    <td><%= prt(r, :name) %></td>   
    <td><%= prt(r, 'type_definition.name' ) %></td>
    <td><%= prt(r, :active) %></td>
    <td><%= prt(r, 'last_updated_by.name') %></td>  
    <td><%= link_to 'Edit', SUBURI + "/authentify/view_handler?index=1&url=#{projectx.edit_type_definition_project_task_template_path(r.type_definition, r)}" if has_action_right?('update', 'projectx_project_task_templates', r) %> </td>

  </tr>
<% end %>
</table>
  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0" %>
</div>
