<div id="main_body">
<% if @for_which == 'project_status' %>
  <h4><%=t('New Project Status') %></h4>
  <% name_label = 'ProjectStatus' %>  
<% elsif @for_which == 'task_status' %>
  <h4><%=t('New Task Status') %></h4>
  <% name_label = 'TaskStatus' %>  
<% end %>
<%= simple_form_for @misc_definition do |f| %>     
  <%= f.input :name, :label => t(name_label) %>
  <%= f.input :brief_note, :label => t("Brief Note:"), :input_html => {:rows => 2} %> 
  <%#= f.input :for_which, :input_html => {:value => @for_which}, :as => :hidden %>
  <%= f.input :ranking_order, :label => t('Ranking Index'), :placehoder => '1, 2, 3 ...'%> 
  <%= f.button :submit, t('Save'), :class =>'btn btn-primary' %>  
<% end %> 

<%= link_to t('Back'), misc_definitions_path(:for_which => @for_which) %>
</div>