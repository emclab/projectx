<%= simple_form_for([@contract, @payment]) do |f| %>
    <%= f.input :project_name, :label => 'Project Name', :readonly => true, :input_html => {:value => @contract.project.name} %>
    <%= f.input :contract_id, :label => 'Contract Id:', :readonly => true %>
    <%= f.input :paid_amount, :label => 'Payment Amount:' %>
    <%= f.input :received_by_id, :label => 'Received By:', :collection => Authentify::UsersHelper.return_users('create', 'projectx_payments') %>
    <%= f.input :payment_desc,:label => 'Payment Description:' %>
    <%= f.input :received_date, :label => 'Received Date:', :as => :string %>
	<%= f.input :payment_type, :label => 'Payment Type:', :collection => find_config_const('payment_type', 'projectx').split(",") %>

    <%= f.button :submit, 'Save' %>
<% end %>


