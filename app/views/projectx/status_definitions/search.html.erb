<div id="main_body">
	<h1>Search</h1>
	
	<%= simple_form_for @status_definitions,  :method => :put, :url => search_results_status_definitions_path  do |f| %>
	  <%= f.input :keyword, :label => "Keyword:" %>
	  <%= f.input :for_what, :label => "Definition Type:", :collection => ['project', 'task'] %>
	  <%= f.input :active, :label => "Active:" %>
	  <%= f.input :name, :label => "Name" %>
	
	  <%= f.button :submit, "Submit" %>
	<% end %> 
	<%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0" %>

</div>
