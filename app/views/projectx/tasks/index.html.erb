<div id="main_body">
<h4>项目任务一览</h4>
<div class="pagination"><%= will_paginate @tasks %></div>
<table class="table table-striped">
  <tr>
    <th>#</th>
    <th>Project</th>
    <th>StartDate</th>
    <th>FinishDate</th>
    <th>TaskName</th>
    <th>TaskStatus</th>   
    <th>Completed</th>
    <th>LastUpdatedBy</th>
    <th></th>
    
  </tr>

<% @tasks.each do |r| %>
  <tr>
  	
  	<td><%= link_to r.id.to_s, SUBURI + "/authentify/view_handler?index=1&url=#{projectx.project_task_path(r.project,r)}" %></td>
  	<td><%= prt(r, 'project.name') %></td>
  	<td><%= r.start_date.strftime("%Y/%m/%d") %></td>
  	<td><%= r.finish_date.strftime("%Y/%m/%d") %></td>
  	<td><%= prt(r, 'project.project_task_template.type_definition.name' ) %></td>
    <td><%= prt(r, 'task_status_definition.name') %></td>       
    <td><%= prt(r, :completed) %></td>
    <td><%= prt(r, 'last_updated_by.name') %></td>  
    <td><%= link_to 'Edit', SUBURI + "/authentify/view_handler?index=1&url=#{projectx.edit_project_task_path(r.project, r)}", :class => 'btn btn-mini btn-primary'  if has_action_right?('update', 'projectx_tasks', r) %> </td>

  </tr>
<% end %>
</table>
  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0" %>
</div>
